<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="view_picking_form" model="ir.ui.view">
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="%(stock_dispatch_wizard_action)d"
                            type="action"
                            class="oe_stat_button"
                            attrs="{'invisible': ['|', ('state', '!=', 'done'), ('picking_type_code', '=', 'outgoing')]}"
                            string="Dispatch"
                            icon="fa-code-fork"/>
                </xpath>
                <xpath expr="//page[@name='extra']//field[@name='move_type']" position="after">
                    <field name="dispatch_id" attrs="{'invisible': [('picking_type_code', '=', 'outgoing')]}" readonly="1"/>
                </xpath>
            </field>
        </record>
    
    </data>
</odoo>