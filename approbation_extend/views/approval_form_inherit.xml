<odoo>
    <data>


        <record model="ir.ui.view" id="inherit_approval_form">
            <field name="name">approval.request.form.inherit</field>
            <field name="model">approval.request</field>
            <field name="inherit_id" ref="approvals.approval_request_view_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//page[@name='approvers']" position="after">
                     <page string="Approbation" name="approbation">
                          <field name="approbation" widget="html"/>
                     </page>
                </xpath>
            </field>
        </record>


    </data>
</odoo>